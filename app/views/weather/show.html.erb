<div class="container">
  <h3 class="center-align">Weather Details</h3>

  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card">
        <div class="card-content">
          <% if @error %>
            <p class="red-text center-align"><%= @error %></p>
          <% else %>
            <span class="card-title"><%= params[:address].upcase %></span>
            <p><strong>Temperature:</strong> <%= @weather[:temp] %>°C</p>
            <p><strong>High:</strong> <%= @weather[:high] %>°C | <strong>Low:</strong> <%= @weather[:low] %>°C</p>
            <p><strong>Condition:</strong> <%= @weather[:condition] %></p>

            <% if @from_cache %>
              <p class="green-text"><em>(Data retrieved from cache)</em></p>
            <% end %>
          <% end %>
        </div>
        <div class="card-action center-align">
          <%= link_to "Check another address", root_path, class: "btn waves-effect waves-light grey" %>
        </div>
      </div>
    </div>
  </div>
</div>
